@page "/novels"
@using MauiApp3.Common;
@using MauiApp3.Data.Impl;
@inject NavigationManager navigate;
<MauiApp3.Components.NovelNaviageBar IndexUrl="/"
                                   NewsUrl="/newsweb"
                                   RecordUrl="/records"></MauiApp3.Components.NovelNaviageBar>
<div class="container">
    <ul class="list-group list-group-flush">
        @foreach (var item in ServiceLoctor.novelKeyPairs)
        {
            var key = item.Key;
            <li class="list-group-item">
                <p class="link-success align-middle" @onclick="@(e=>navigate.NavigateTo($"/index/{key}"))">@item.Value</p>
            </li>
        }
    </ul>
</div>
