    public async Task GetNews(int id, bool flag = true)
    {
        try
        {
            await js.InvokeVoidAsync("loading", true);
            navigate.GoTo("/news",new string []{ id.ToString(), flag.ToString() });
        }
        finally
        {
            await js.InvokeVoidAsync("loading", false);
        }
       
    }
}
