@page "/newsweb"
@using MauiApp3.Model;
@using MauiApp3.Data;
@using MauiApp3.Common;
@inject NewsService newService;
@inject IJSRuntime js;
@inject NavigationManager navigate;
<MauiApp3.Components.NovelNaviageBar IndexUrl="/"
                                   NovelUrl="/novels"
                                     RecordUrl="/records"></MauiApp3.Components.NovelNaviageBar>
<div class="container">
    <ul class="list-group list-group-flush">
       
        <li class="list-group-item"><span class="link-success  link-underline-opacity-25 link-underline-opacity-100-hover align-middle" @onclick="@(e=>navigate.OpenInWebView("https://www.cnblogs.com/"))">博客园</span></li>
        @foreach (var item in newWebs)
        {
            <li class="list-group-item"><span class="link-success  link-underline-opacity-25 link-underline-opacity-100-hover align-middle" @onclick="@(e=>GetNews(item.id,item.falg))">@item.name</span></li>
        }
     
    </ul>
</div>
